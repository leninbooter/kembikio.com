$header_height = 60px
$page_width = 950px

@import url('http://fonts.googleapis.com/css?family=Raleway:400,100,200,300,500');
@import url('http://fonts.googleapis.com/css?family=Open+Sans:600');
@import url('http://fonts.googleapis.com/css?family=Roboto+Slab');

footer
	margin 0 auto
	height 25px
	width $page_width
	color #ffffff
	background #000000
	text-align center
	line-height @height
	font-size 12px	

html
	font-family: 'Raleway' !important;

header
	background #666666
	color #ffffff
	display block
	height $header_height	
	
h2
	margin 0 0 10px 0

	
nav
	float:right;
	display: inline-block;
	height: $header_height;;
	line-height: $header_height;
	
nav ul 
	margin	0
	padding 0 20px 0 0

nav ul li
	display inline
	margin 0 20px 0 0
	font-size 14px
	font-weight 500
	letter-spacing 0.03em
	
ul
	margin 0

/* ids */
#boton_llamaya
	display none
	
#contenedor
	width 100%
	height 100%
	
#headerBar
	width $page_width
	margin 0 auto
	height inherit

#inf_servicios li
	margin 20px
	
#inf_servicios li
#inf_servicios li div
#inf_servicios li img
	display inline-block
	
#inf_servicios li div
	margin 20px
	width 500px

#inf_servicios li img
	text-align center
	
#llamanos
	display inline-block
	color #fff
	font-size 1.7em
	margin 10px 30px
	width 500px

#llamanos_m
	display none
	
#logo
	float	left
	display	inline-block
	height	60px
	padding 0 0 0 10px

#mainContent
	margin 0 auto
	
#navegacion
	float right
	display inline-block
	height $header_height
	line-height $header_height
	
#welcome
	background url('../imagenes/background.png') no-repeat
	width $page_width
	height 579px
	margin 0 auto
	color #ffffff
	position relative

#welcome h2
	margin 0px 0 10px 40px
	padding 30px 0 0 0
	font-weight 400
	font-size 30px

#welcome .slogan
	font-family 'Roboto Slab'

#welcome .slogan	 strong
	color #33A1D9 /*#33A1D9 */
	font-size 1.20em
	text-shadow 1px 1px 1px #fff
	
#welcome ul
	margin 0 0 0 40px

#welcome ul li	
	margin 0 0 6px 0
	
#welcome #services
		height 170px
		/*padding 20px*/
		background rgba(102, 102, 102, 0.4)
		width $page_width
		position absolute
		bottom 0px
	
#welcome #services ul
	margin 0 0 0 0
	padding 0
	text-align center
		
#welcome #services ul li
	display inline-block	
	
#welcome #services ul li div
	width 220px
	
#welcome #services ul li div p
		text-align center

/* clases */
.boton
	padding 3px 13px
	font-size 0.9em
	font-weight 600
	font-style bold
	font-family 'Open Sans', sans-serif
	color #fff
	-webkit-box-shadow 0px 0px 4px 0px #0a0a0a /* Android 2.3+, iOS 4.0.2-4.2, Safari 3-4 */
	box-shadow 0px 0px 4px 0px #0a0a0a /* Chrome 6+, Firefox 4+, IE 9+, iOS 5+, Opera 10.50+ */
	background-color #f1924c
	background-image -webkit-linear-gradient(top, #f1924c, #ff6d00) /* Chrome 10-25, iOS 5+, Safari 5.1+ */
	background-image linear-gradient(to bottom, #f1924c, #ff6d00) /* Chrome 26, Firefox 16+, IE 10+, Opera */
	text-decoration none
	margin 15px 13px